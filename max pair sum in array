class Solution:
    def minPairSum(self, nums: List[int]) -> int:
        
        
        nums.sort()
        maxpairsum=0

        i, j = 0, len(nums)-1
        while i < j:
            pairsum=(nums[i]+nums[j])
            i+= 1
            j -= 1
            
            maxpairsum=max(maxpairsum,pairsum)
        return maxpairsum


        
